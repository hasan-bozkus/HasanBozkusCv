@model HasanBozkusCv.Models.Entity.Experience
@{
    ViewBag.Title = "DeneyimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Deneyim Güncelleme Sayfası</h4>
<br />
<form class="form-group" method="post">
     @Html.Label("Deneyim ID")
    @Html.TextBoxFor(x=>x.ID, new {@Class="form-control disabled"})
    <br />
     @Html.Label("Başlık")
    @Html.TextBoxFor(x=>x.Title, new { @Class = "form-control" })
    <br />
     @Html.Label("Alt Başlık")
    @Html.TextBoxFor(x=>x.SubTitle, new { @Class = "form-control" })
    <br />
     @Html.Label("Tarih")
    @Html.TextBoxFor(x=>x.DateTime, new { @Class = "form-control" })
    <br />
     @Html.Label("Açıklama")
    @Html.TextAreaFor(x=>x.Description, new { @Class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>

