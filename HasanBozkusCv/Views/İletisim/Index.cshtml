@using HasanBozkusCv.Models.Entity
@model List<Contacts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">

                        <div class="tab-pane active" id="timeline">



                            <div class="timeline timeline-inverse">
                                @foreach (var item in Model)
                                {
                                    <div class="time-label">
                                        <span class="bg-info">
                                            @(((DateTime)item.DateTime).ToString("dd-MMM-yyyyy"))
                                        </span>
                                    </div>

                                    <div>
                                        <i class="fas fa-comments bg-warning"></i>

                                        <div class="timeline-item">
                                            <span class="time"><i class="far fa-mail-reply"></i>@item.Mail</span>

                                            <h3 cl accesskeyass="timeline-header"><a href="#">@item.NameSurname</a> @item.Subject</h3>

                                            <div class="timeline-body">
                                                @item.Message
                                            </div>
                                           
                                        </div>
                                    </div>

                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
