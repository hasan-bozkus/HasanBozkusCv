@using HasanBozkusCv.Models.Entity
@model List<Hobbys>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hobi Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="5" class="form-control" name="Description">@item.Description</textarea>
        <br />
        <br />
        <label>Açıklama 2</label>
        <textarea rows="5" class="form-control" name="Description2">@item.Description2</textarea>
    }
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
