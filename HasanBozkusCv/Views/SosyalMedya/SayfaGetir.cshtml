@model HasanBozkusCv.Models.Entity.SocialMedia
@{
    ViewBag.Title = "SayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h4>Sosyal Medya Düzenleme Sayfası</h4>
<br />
<form class="form-group" method="post">
    @Html.Label("Sosyal Medya Adı")
    @Html.TextBoxFor(x => x.Ad, new { @Class = "form-control" })
    <br />
    @Html.Label("Link")
    @Html.TextBoxFor(x => x.Link, new { @Class = "form-control" })
    <br />
    @Html.Label("Icon")
    @Html.TextBoxFor(x => x.Icon, new { @Class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>

